<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_">

    <TextView
        android:id="@+id/agb_textView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="16dp"
        android:scrollbars="vertical" />

    <CheckBox
        android:id="@+id/agb_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ich aktzeptiere die AGB und die DatenschutzerklÃ¤rung"
        tools:ignore="HardcodedText" />

    <Button
    android:id="@+id/porceed"
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:layout_gravity="center"
        android:background="@drawable/ic_accept"/>

    <Button
        android:id="@+id/decline"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ic_decline"/>

</LinearLayout>