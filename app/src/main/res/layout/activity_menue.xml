<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_">


    <TextView
        android:id="@+id/kontostand"
        android:layout_width="211dp"
        android:layout_height="79dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="91dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/redirectToAd"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="185dp"

        android:background="@drawable/returnlogo"

        ads:layout_constraintEnd_toStartOf="@+id/signOutButton"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/amazon"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="157dp"

        android:background="@drawable/ic_amazon"
        ads:layout_constraintBottom_toTopOf="@+id/paypal"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.476"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/kontostand"
        ads:layout_constraintVertical_bias="0.151" />

    <Button
        android:id="@+id/googlePlay"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="53dp"

        android:background="@drawable/ic_google_play_svg"

        ads:layout_constraintBottom_toTopOf="@+id/paypal"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.472"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/amazon" />

    <Button
        android:id="@+id/paypal"
        android:layout_width="260dp"
        android:layout_height="72dp"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="56dp"

        android:background="@drawable/ic_paypal"

        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="289dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"

        android:background="@drawable/leave_"

        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>